<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:with field="res" type="com.example.gwt.basic.client.resources.AppResources"/>

    <g:HTMLPanel>

        <header>
            <div class="{res.style.container}">
                <h1>GWTP Basic Example</h1>
            </div>
        </header>

        <div class="{res.style.container} {res.style.box}">
            <p>
                <strong>Please enter your name:</strong>
            </p>
            <g:TextBox ui:field="nameField"/>

            <g:Button ui:field="sendButton">Submit</g:Button>
            <g:HTML ui:field="error" styleName="{res.style.labelError}"/>
        </div>

    </g:HTMLPanel>
</ui:UiBinder>
