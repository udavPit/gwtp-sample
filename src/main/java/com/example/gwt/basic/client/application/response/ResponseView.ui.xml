<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:with field="res" type="com.example.gwt.basic.client.resources.AppResources"/>

    <g:HTMLPanel>

        <header>
            <div class="{res.style.container}">
                <h1>GWTP Basic Example</h1>
            </div>
        </header>

        <div class="{res.style.container}">
            <h2>Remote Procedure Call</h2>

            <p>
                <strong>Sending name to server:</strong>
            </p>
            <div class="{res.style.box}">
                <g:HTML ui:field="textToServer"/>
            </div>

            <p>
                <strong>Server replies:</strong>
            </p>
            <div class="{res.style.box}">
                <g:HTML ui:field="serverResponse"/>
            </div>

            <g:Button ui:field="closeButton">Close</g:Button>
        </div>

    </g:HTMLPanel>
</ui:UiBinder>
